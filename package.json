{
  "name": "pokepals",
  "displayName": "Pokémon Pals",
  "description": "A cozy, pixel-art Tamagotchi-style Pokémon companion for developers",
  "version": "0.1.0",
  "publisher": "pokepals",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pokemon",
    "companion",
    "tamagotchi",
    "productivity",
    "fun"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "pokepals.sidebar",
          "name": "Pokémon Pals"
        }
      ]
    },
    "commands": [
      {
        "command": "pokepals.showPokemon",
        "title": "Show Pokémon",
        "category": "Pokémon Pals"
      },
      {
        "command": "pokepals.resetGame",
        "title": "Reset Game",
        "category": "Pokémon Pals"
      },
      {
        "command": "pokepals.saveGame",
        "title": "Save Game",
        "category": "Pokémon Pals"
      }
    ],
    "configuration": {
      "title": "Pokémon Pals",
      "properties": {
        "pokepals.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Pokémon Pals companion"
        },
        "pokepals.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Pokémon in status bar"
        },
        "pokepals.animations": {
          "type": "boolean",
          "default": true,
          "description": "Enable Pokémon animations"
        },
        "pokepals.soundEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable sound effects"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {}
};
