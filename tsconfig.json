{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // rules
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // paths
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "types": ["node", "vscode", "vitest/globals"]
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "coverage",
    "dist",
    "vitest.config.ts",
    "eslint.config.mjs",
    "prettier.config.mjs",
    "__mocks__"
  ],
  "watchOptions": {
    "excludeDirectories": ["dist", "tmp"]
  }
}
